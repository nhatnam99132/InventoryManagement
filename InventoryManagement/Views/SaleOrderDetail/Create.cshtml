@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $("#product").on("change", function (e) {
    // alert(this.value);
    //debugger;
    var Id = this.value;
    var warehouseid = $('#warehouse').val();
    $.ajax({
        type: "GET",
        url: "@Url.Action("GetInventory", "SaleOrderDetail")",
        data: { productId: Id, warehouseID:  warehouseid},
        //contentType: "application/json;charset=utf-8",
        dataType: "json",
        success: function (result) {
            //debugger;
                $('#inventory').val(result.quantity);
            console.log(result)
        },
        error: function (response) {
            //debugger;
            $('#inventory').val(0);
            console.log(response);
        }
    });
    })

    $("#saleorder").on("change", function (e) {
        // alert(this.value);
        //debugger;
        var Id = this.value;

        $.ajax({
            type: "GET",
            url: "@Url.Action("GetWarehouse", "SaleOrderDetail")",
            data: { saleOrderId: Id },
            //contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                //debugger;
                $('#warehouse').val(result.warehouseId);
                console.log(result)
            },
            error: function (response) {
                //debugger;
                $('#warehouse').val("Error Warehouse");
                console.log(response);
            }
        });
    });


    $("#formSale").submit(async function (event) {
        var i = $('#inventory').val();
        console.log(i);
        var q = $('#Quantity').val();
        console.log(i);
        var qi = i - q;
        console.log(qi);

        if (qi < 0) {
            alert("Không đủ số lượng sản phẩm để bán");
            event.preventDefault();
        }
        var Id = $('#product').val();
        var warehouseid = $('#warehouse').val();
        await $.ajax({
            type: "POST",
            url: "@Url.Action("UpdateInventory", "SaleOrderDetail")",
            data: { productId: Id, warehouseId: warehouseid, quantity: qi },
            //contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                //debugger;
               
                console.log(result)
            },
            error: function (response) {
                //debugger;
               
                event.preventDefault();
                console.log(response);
            }
        });
    });
</script>
